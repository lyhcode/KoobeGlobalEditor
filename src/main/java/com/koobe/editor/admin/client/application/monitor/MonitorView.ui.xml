<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .margin-fix {
        margin-bottom: 0 !important;
        }
        .cellTable {
        border-bottom: 1px solid #ccc;
        text-align: left;
        margin-bottom: 4px;
        }
    </ui:style>
    <b:Row>

        <b:PageHeader text="Task Monitor"/>

        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="3" text="File(s) In Progress"/>
            </b:PanelHeader>
            <b:PanelBody>
                <b:Button type="PRIMARY" icon="PLAY" ui:field="refreshButton">Refresh</b:Button>

                <b:HTMLPanel>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Upload Date</th>
                            </tr>
                        </thead>
                        <tbody id="monitor-table-body">
                            <tr>
                                <td>BOOK1.pdf</td>
                                <td>2013/12/06</td>
                            </tr>
                            <tr>
                                <td>MY_STORY.pdf</td>
                                <td>2013/12/07</td>
                            </tr>
                        </tbody>
                    </table>
                </b:HTMLPanel>
            </b:PanelBody>
            <b:PanelFooter>
            </b:PanelFooter>
        </b:Panel>

    </b:Row>
</ui:UiBinder>