<!-- GWT BootStrap 3 -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .buttons button {
        margin: 0.5em;
        }

        .labels span {
        margin-right: 5px;
        }
    </ui:style>

    <b:Container>
        <b:Navbar position="FIXED_TOP">
            <b:Container>
                <b:NavbarHeader>
                    <b:NavbarBrand ui:field="brand">Koobe Editor</b:NavbarBrand>
                    <b:NavbarCollapseButton target="#navbar-collapse"/>
                </b:NavbarHeader>
                <b:NavbarCollapse b:id="navbar-collapse">
                    <b:NavbarNav>
                        <b:ListDropDown>
                            <b:AnchorButton toggle="DROPDOWN">File</b:AnchorButton>
                            <b:DropDownMenu>
                                <b:ListItem ui:field="openLink">Open</b:ListItem>
                                <b:ListItem ui:field="importLink">Import</b:ListItem>
                                <b:ListItem ui:field="logoutLink">Logout</b:ListItem>
                            </b:DropDownMenu>
                        </b:ListDropDown>
                        <b:ListDropDown>
                            <b:AnchorButton toggle="DROPDOWN">Tools</b:AnchorButton>
                            <b:DropDownMenu>
                                <b:ListItem ui:field="monitorLink">Monitor</b:ListItem>
                            </b:DropDownMenu>
                        </b:ListDropDown>
                    </b:NavbarNav>
                </b:NavbarCollapse>
            </b:Container>
        </b:Navbar>

        <!-- Container Content -->
        <b:Row ui:field="container" width="100%">
            <!-- Empty -->
        </b:Row>
    </b:Container>

</ui:UiBinder>