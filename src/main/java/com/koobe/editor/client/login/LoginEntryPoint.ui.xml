<!-- GWT BootStrap 3 -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">
    <ui:style>
        .buttons button {
            margin: 0.5em;
        }
        .labels span {
            margin-right: 5px;
        }
    </ui:style>

    <b:Container>
        
        <b:Div ui:id="logo">
            <b:Heading size="3">New Koobe Editor</b:Heading>
        </b:Div>
        
        <b:Div ui:id="loginbox">
            
            <b:Form>
                <b:Paragraph>
                    Please login first.
                </b:Paragraph>
                                
                <b:FormGroup ui:field="usernameFormGroup">
                    <b:InputGroup>
                        <b:InputGroupAddon icon="USER"/>
                        <b:TextBox ui:field="usernameTextBox" placeHolder="Name" autoComplete="false"/>
                    </b:InputGroup>
                </b:FormGroup>
                
                <b:FormGroup ui:field="passwordFormGroup">
                    <b:InputGroup>
                        <b:InputGroupAddon icon="LOCK"/>
                        <b:PasswordTextBox ui:field="passwordTextBox" placeHolder="Password" autoComplete="false" />
                    </b:InputGroup>
                </b:FormGroup>
                
                <b:Div ui:styleName="form-actions">
                    <b:Button ui:field="loginButton" type="PRIMARY" block="true">Login</b:Button>
                </b:Div>
                
                <b:Div ui:styleName="footer-login">
                    <b:Div ui:styleName="pull-left text">
                        <b:Span>Login with</b:Span>
                    </b:Div>
                    <b:Div ui:styleName="pull-right btn-social">
                        <b:HTMLPanel>
                            <a class="btn btn-facebook" href="#"><b:Icon type="FACEBOOK"/></a>
                            <a class="btn btn-twitter" href="#"><b:Icon type="TWITTER"/></a>
                            <a class="btn btn-google-plus" href="#"><b:Icon type="GOOGLE_PLUS"/></a>
                        </b:HTMLPanel>
                    </b:Div>
                </b:Div>
            </b:Form>
        </b:Div>
    </b:Container>
</ui:UiBinder>