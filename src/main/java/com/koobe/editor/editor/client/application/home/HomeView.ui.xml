<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:editor="urn:import:com.koobe.editor.editor.client.ui"
             xmlns:widget="urn:import:com.koobe.editor.widget.client.ui">
    <ui:style>
    .logo {
        background-color: #b72535;
        height: 50px;
        margin-bottom: 20px;
    }
    .logo h1 {
        color: #fff;
        font-size: 16px;
        text-align: center;
    }
    .sidebar {
        z-index: 9999;
        float: right;
        position: fixed;
        width: 200px;
        height: 100%;
        background-color: #51bfd2;
    }
    .header {
        background-color: #51bfd2;
        height: 50px;
        border: none;
        padding-left: 250px;
    }
    .main {
        padding-left: 250px;
        padding-top: 100px;
        padding-bottom: 100px;
    }
    .paper {
        width: 780px;
        background-color: #fff;
        margin: 0 auto;
        border: 1px solid #fff;
        box-shadow: 5px 5px 5px #aaa;
        min-height: 1024px;
    }
    .viewport {
        position:absolute;
        width:100%;
        min-height:100%;
        background-color:#eeeeee;
        background-image: url(/assets/images/white-linen.png);
    }
    .heading {
        color: #fff;
        font-size: 16px;
        border-bottom: 1px solid #fff;
        padding-left: 15px;
    }
    ul.toolboxPanel {
        list-style-type: none;
        padding:15px;
        margin:0;
    }
    .toolboxPanel li {
        margin-bottom: 10px;
        margin-right: 10px;
        float: left;
    }
    .toolboxPanel li span {
        font-family: Georgia;
        font-size: 36px;
        color: #fff;
        border: 2px solid #fff;
        border-radius: 5px;
        width: 72px;
        height: 72px;
        padding: 15px;
        display: inline-block;
        text-align: center;
        cursor: pointer;
    }
    </ui:style>
    <g:HTMLPanel styleName="{style.viewport}">

        <!-- Header -->
        <div class="navbar navbar-default navbar-fixed-top {style.header}">
            <b:Button ui:field="showHTMLButton">HTML</b:Button>
        </div>

        <!-- Sidebar -->
        <div class="{style.sidebar}">
            <div class="{style.logo}"><h1>e7read</h1></div>

            <h3 class="{style.heading}">基本工具</h3>

            <ul class="{style.toolboxPanel}">
                <li>
                    <g:InlineHTML ui:field="titleWidget">
                        H
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="textWidget">
                        <i class="fa fa-pencil"/>
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="imageWidget">
                        <i class="fa fa-picture-o"/>
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="codeWidget">
                        <i class="fa fa-code"/>
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="quoteWidget">
                        <i class="fa fa-quote-left"/>
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="audioWidget">
                        <i class="fa fa-music"/>
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="videoWidget">
                        <i class="fa fa-youtube-play"/>
                    </g:InlineHTML>
                </li>
                <li>
                    <g:InlineHTML ui:field="youtubeWidget">
                        <i class="fa fa-youtube"/>
                    </g:InlineHTML>
                </li>
            </ul>

        </div>

        <g:FocusPanel styleName="{style.main}" ui:field="mainPanel">
            <g:HTMLPanel styleName="{style.paper} content">
                <widget:BookCanvas ui:field="canvas" />
            </g:HTMLPanel>
        </g:FocusPanel>
    </g:HTMLPanel>
</ui:UiBinder>
