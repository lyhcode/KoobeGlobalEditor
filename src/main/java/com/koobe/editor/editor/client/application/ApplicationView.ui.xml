<!-- GWT BootStrap 3 -->
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:common="urn:import:com.koobe.editor.common.client.ui"
             xmlns:editor="urn:import:com.koobe.editor.editor.client.ui">
    <ui:style>
    .footer {
        text-align: center;
        padding-top: 15px;
        padding-bottom: 25px;
    }
    .main {
        padding-left: 250px;
    }
    </ui:style>

    <ui:with type="com.koobe.editor.editor.client.place.NameTokens" field="nameTokens"/>

    <g:HTMLPanel>

        <!-- Sidebar -->
        <editor:Sidebar />

        <g:HTMLPanel styleName="{style.main}">

            <!-- Main Place Container -->
            <b:Container ui:field="container" />

        </g:HTMLPanel>


        <!-- Loading -->
        <common:LoadingIndicator ui:field="loading" />

    </g:HTMLPanel>

</ui:UiBinder>