<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:style>
        .widget {
        padding-top:100px;
        padding-bottom:100px;
        }
    </ui:style>
    <b:Container styleName="page-content">

        <b:Row>
            <b:Column size="MD_4">
                <g:HTMLPanel styleName="widget">

                    <g:HTMLPanel styleName="widget-body text-center">
                        <div class="{style.widget}">
                            <b:Button size="LARGE" icon="FILE">Create</b:Button>
                        </div>
                    </g:HTMLPanel>

                </g:HTMLPanel>
            </b:Column>
            <b:Column size="MD_4">
                <g:HTMLPanel styleName="widget">

                    <g:HTMLPanel styleName="widget-body text-center">
                        <div class="{style.widget}">
                            <b:Button size="LARGE" icon="FOLDER_OPEN">Open</b:Button>
                        </div>
                    </g:HTMLPanel>

                </g:HTMLPanel>
            </b:Column>
            <b:Column size="MD_4">
                <g:HTMLPanel styleName="widget">

                    <g:HTMLPanel styleName="widget-body text-center">
                        <div class="{style.widget}">
                            <b:Button size="LARGE" icon="UPLOAD" ui:field="importButton">Import</b:Button>
                        </div>
                    </g:HTMLPanel>

                </g:HTMLPanel>
            </b:Column>
        </b:Row>

    </b:Container>
</ui:UiBinder>
